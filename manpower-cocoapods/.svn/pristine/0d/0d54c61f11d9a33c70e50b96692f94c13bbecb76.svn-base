#pragma mark - Faceboard delegate
-(void)faceBoard:(FaceBoard *)faceBoard sendButtonClicked:(id)sender{
    NSString *text = self.textField.text;
    if (text.length) {
        [self sendMessage:MSG_TYPE_TEXT withAttachment:text];
        self.textField.text = @"";
    }
 
